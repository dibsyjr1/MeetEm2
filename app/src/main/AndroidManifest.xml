<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alasdairdibben.meetem" >
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="21" tools:overrideLibrary="com.google.android.gms"/>
    <permission android:name="com.alasdairdibben.meetem.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="com.alasdairdibben.meetem.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/meetemicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MapsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".MenuActivity"
            android:label="MeetEm"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="MeetEm"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".FriendsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".GroupsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".OptionsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".EditFriendsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".EditGroupsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".AddFriendsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".AddGroupsActivity"
            android:label="MeetEm">

        </activity>

        <activity
            android:name=".AddUserActivity"
            android:label="MeetEm">

        </activity>


        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCY9zsZzrxH09b_Vajah6fOszIGIN0i8vM" />


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>


</manifest>
